<UserControl x:Class="SharedLivingCostCalculator.Components.ComponentViews.SimpleInputView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SharedLivingCostCalculator.Components.ComponentViews"
                         
             mc:Ignorable="d" 
             x:Name="SIV"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto" SharedSizeGroup="ssg"/>
        </Grid.ColumnDefinitions>
            
        <TextBlock Text="{Binding Path=Label, ElementName=SIV}"
                   Grid.Column="0"
                   Background="Transparent"
                   MinWidth="100"
                   HorizontalAlignment="Right"
                   TextAlignment="Left"
                   Foreground="{Binding Path=Foreground, ElementName=SIV}"
                   />
        <TextBox Text="{Binding Path=Value, ElementName=SIV, UpdateSourceTrigger=PropertyChanged}"
                 x:Name="TB_Value"
                     Grid.Column="1"
                     Background="Transparent"
                 MinWidth="250"
                     Foreground="{Binding Path=Foreground, ElementName=SIV}"
                     />
    </Grid>
</UserControl>
