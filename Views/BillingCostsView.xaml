                                          NotifyOnSourceUpdated=True}"
                                                 Style="{StaticResource DoubleValueTextBlock}"/>

                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="{DynamicResource IDF_OtherCostsAdvance}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding OtherCostsAnnualCostsShare,
                               StringFormat=C2,
                               NotifyOnSourceUpdated=True}"
                                      Style="{StaticResource DoubleValueTextBlock}"/>

                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="{DynamicResource IDF_Price}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding TotalCostsAnnualCostsShare,
                                          StringFormat=C2,
                                          NotifyOnSourceUpdated=True}"
                                                 Style="{StaticResource DoubleValueTextBlock}"
                                                           FontWeight="Bold"/>

                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="{DynamicResource IDF_Advance}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Advances,
                                            StringFormat=C2, 
                                            NotifyOnSourceUpdated=True}"
                                                   Style="{StaticResource DoubleValueTextBlock}"/>

                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="{DynamicResource IDF_Balance}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Balance,
                                          StringFormat=C2,
                                          NotifyOnSourceUpdated=True}"
                                                 Style="{StaticResource DoubleValueTextBlock}"
                                                   FontWeight="Bold"/>

                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                </GridView.Columns>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Border>

                <!--#endregion-->
                
                
                <Border Visibility="{Binding ShowOtherCostsData, Converter={StaticResource visCon}}">
                    <ListView ItemsSource="{Binding BillingViewModel.RoomCostShares}"
                      HorizontalAlignment="Stretch"
                      SelectionMode="Single"
                      
                      ItemContainerStyle="{StaticResource ItemContainerStyle}"
                      Margin="0 10 0 0"
                      >

                        <ListView.View>
                            <GridView ColumnHeaderContainerStyle="{StaticResource GVCH}">

                                <GridView.Columns>
                                    <GridViewColumn Header="{DynamicResource IDF_RoomName}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding RoomName,
                                                    UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                                   Style="{StaticResource StringValueTextBlock}"/>

                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>

                                    </GridViewColumn>

                                    <GridViewColumn Header="{DynamicResource IDF_RoomArea}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding RoomArea,
                                                    UpdateSourceTrigger=PropertyChanged,
                                                    Mode=OneWay, StringFormat=N2}"
                                                   Style="{StaticResource DoubleValueTextBlock}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="{DynamicResource IDF_OtherCostsList}"
                                            Width="{Binding OtherCostItemCountBasedWidth}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <ListView ItemsSource="{Binding ConsumptionItemViewModels,
                                            NotifyOnSourceUpdated=True}"
                                                  BorderBrush="Transparent"                                                       
                                                  BorderThickness="0">

                                                    <ListView.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <StackPanel Orientation="Horizontal">
                                                            </StackPanel>
                                                        </ItemsPanelTemplate>
                                                    </ListView.ItemsPanel>

                                                    <ListView.ItemTemplate>
                                                        <DataTemplate >
                                                            <StackPanel Orientation="Vertical">

                                                                <TextBlock Text="{Binding ConsumptionCause}" FontWeight="SemiBold"
                                                               Style="{StaticResource StringValueTextBlock}"/>

                                                                <TextBlock Text="{Binding TotalConsumptionValue, StringFormat=N4}"
                                                                   Style="{StaticResource DoubleValueTextBlock}"/>

                                                                <TextBlock Text="{Binding ConsumptionCost, StringFormat=C2}"
                                                                   Style="{StaticResource DoubleValueTextBlock}"/>


                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </ListView.ItemTemplate>

                                                </ListView>
                                            </DataTemplate>


                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                </GridView.Columns>

                            </GridView>


                        </ListView.View>


                    </ListView>
                </Border>
            
                <!-- Other Costs per Month -->
                <Border Visibility="{Binding ShowOtherCosts, Converter={StaticResource visCon}}">
                    <ListView ItemsSource="{Binding BillingViewModel.RoomCostShares}"
                      HorizontalAlignment="Stretch"
                      SelectionMode="Single"
                      
                      Visibility="{Binding HasOtherCosts, Converter={StaticResource visCon}}"
                      ItemContainerStyle="{StaticResource ItemContainerStyle}"
                      Margin="0 10 0 0"
                      >

                        <ListView.View>
                            <GridView ColumnHeaderContainerStyle="{StaticResource GVCH}">

                                <GridView.Columns>
                                    <GridViewColumn Header="{DynamicResource IDF_RoomName}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding RoomName,
                                                    UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                                                   Style="{StaticResource StringValueTextBlock}"/>

                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>

                                    </GridViewColumn>

                                    <GridViewColumn Header="{DynamicResource IDF_RoomArea}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding RoomArea,
                                                    UpdateSourceTrigger=PropertyChanged,
                                                    Mode=OneWay, StringFormat=N2}"
                                                   Style="{StaticResource DoubleValueTextBlock}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="{DynamicResource IDF_OtherCostsList}"
                                            Width="{Binding OtherCostItemCountBasedWidth}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <ListView ItemsSource="{Binding FinancialTransactionItemViewModels,
                                            NotifyOnSourceUpdated=True}"
                                                  BorderBrush="Transparent"                                                       
                                                  BorderThickness="0">

                                                    <ListView.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <StackPanel Orientation="Horizontal">
                                                            </StackPanel>
                                                        </ItemsPanelTemplate>
                                                    </ListView.ItemsPanel>

                                                    <ListView.ItemTemplate>
                                                        <DataTemplate >
                                                            <StackPanel Orientation="Vertical">

                                                                <TextBlock Text="{Binding TransactionItem}" FontWeight="SemiBold"
                                                               Style="{StaticResource StringValueTextBlock}"/>

                                                                <TextBlock Text="{Binding CostShareTypes}"
                                                                   Style="{StaticResource StringValueTextBlock}"/>

                                                                <TextBlock Text="{Binding TransactionSum, StringFormat=C2}"
                                                                   Style="{StaticResource DoubleValueTextBlock}"/>

                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </ListView.ItemTemplate>

                                                </ListView>
                                            </DataTemplate>


                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="{DynamicResource IDF_OtherCostsSum}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding OtherCostsAnnualCostsShare,
                                                    UpdateSourceTrigger=PropertyChanged, Mode=OneWay, StringFormat=C2}"
                                                           Style="{StaticResource DoubleValueTextBlock}"/>

                                            </DataTemplate>

                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                </GridView.Columns>

                            </GridView>


                        </ListView.View>


                    </ListView>
                </Border>

            </StackPanel>


        </Border>
        <!--#endregion-->


    </StackPanel>
</UserControl>
