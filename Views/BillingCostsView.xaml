<UserControl x:Class="SharedLivingCostCalculator.Views.BillingCostsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:comps="clr-namespace:SharedLivingCostCalculator.Components"
             xmlns:local="clr-namespace:SharedLivingCostCalculator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="20">
        <Grid HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <comps:CurrencyInputView Grid.Column="0" Label="{DynamicResource IDF_Rent}" Value="{Binding TotalRentCosts, NotifyOnSourceUpdated=True}"
                                     ValueAlignment="Right"
                                     LabelMinWidth="50"
                                     ValueMinWidth="90"
                                     IsReadOnly="True"/>
            <comps:CurrencyInputView Grid.Column="1" Label="{DynamicResource IDF_ExtraCosts}" Value="{Binding TotalExtraCosts, NotifyOnSourceUpdated=True}"
                                     ValueAlignment="Right"
                                     LabelMinWidth="50"
                                     ValueMinWidth="90"
                                     IsReadOnly="True"/>
            <comps:CurrencyInputView Grid.Column="2" Label="{DynamicResource IDF_TotalCosts}" Value="{Binding TotalCosts, NotifyOnSourceUpdated=True}"
                                     ValueAlignment="Right"
                                     LabelMinWidth="50"
                                     ValueMinWidth="90"
                                     IsReadOnly="True"/>
            <comps:CurrencyInputView Grid.Column="3" Label="{DynamicResource IDF_Payments}" Value="{Binding TotalPayments, NotifyOnSourceUpdated=True}"
                                     ValueAlignment="Right"
                                     LabelMinWidth="50"
                                     ValueMinWidth="90"
                                     IsReadOnly="True"/>
            <comps:CurrencyInputView Grid.Column="4" Label="{DynamicResource IDF_Balance}" Value="{Binding Balance, NotifyOnSourceUpdated=True}"
                                     ValueAlignment="Right"
                                     LabelMinWidth="50"
                                     ValueMinWidth="90"
                                     IsReadOnly="True"/>
        </Grid>


        <DataGrid ItemsSource="{Binding RoomCosts}"
                  SelectionMode="Single"
                  AutoGenerateColumns="False"                  
                  HorizontalAlignment="Center"                  
                  TextBlock.TextAlignment="Right"     
                  VerticalContentAlignment="Top"
                  IsReadOnly="True"
                  Grid.Row="2">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Room.ID}"
                                    CanUserSort="True" Header="{DynamicResource IDF_ID}"/>

                <DataGridTextColumn Binding="{Binding Room.RoomName}"
                                    CanUserSort="True" Header="{DynamicResource IDF_RoomName}"/>

                <DataGridTextColumn Binding="{Binding Room.RoomArea}"
                                    CanUserSort="True" Header="{DynamicResource IDF_RoomArea}"/>

                <DataGridTextColumn Binding="{Binding Consumption, StringFormat=N4}"
                                    CanUserSort="True" Header="{DynamicResource IDF_RoomHeatingUnits}"/>

                <DataGridTextColumn Binding="{Binding Percentage, StringFormat=N2}"
                                    CanUserSort="True" Header="{DynamicResource IDF_Percentage}"/>

                <DataGridTextColumn Binding="{Binding RentCosts, StringFormat=C2, ConverterCulture=de-DE}"
                                    CanUserSort="True" Header="{DynamicResource IDF_Rent}"/>

                <DataGridTextColumn Binding="{Binding FixedCosts, StringFormat=C2, ConverterCulture=de-DE}"
                                    CanUserSort="True" Header="{DynamicResource IDF_FixedCosts}"/>

                <DataGridTextColumn Binding="{Binding HeatingCosts, StringFormat=C2, ConverterCulture=de-DE}"
                                    CanUserSort="True" Header="{DynamicResource IDF_HeatingCosts}"/>

                <DataGridTextColumn Binding="{Binding BillingCosts, StringFormat=C2, ConverterCulture=de-DE}"
                                    CanUserSort="True" Header="{DynamicResource IDF_TotalCosts}"/>

                <DataGridTextColumn Binding="{Binding CostsPercentage, StringFormat=N2, ConverterCulture=de-DE}"
                                    CanUserSort="True" Header="{DynamicResource IDF_Percentage}"/>

                <DataGridTextColumn Binding="{Binding TotalPayments, StringFormat=C2, ConverterCulture=de-DE}"
                                    CanUserSort="True" Header="{DynamicResource IDF_Payments}"/>

                <DataGridTextColumn Binding="{Binding Balance, StringFormat=C2, ConverterCulture=de-DE}"
                                    CanUserSort="True" Header="{DynamicResource IDF_Balance}"/>
            </DataGrid.Columns>
        </DataGrid>

    </StackPanel>
</UserControl>
