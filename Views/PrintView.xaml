<UserControl x:Class="SharedLivingCostCalculator.Views.PrintView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SharedLivingCostCalculator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="{Binding FlatViewModel.Address, NotifyOnSourceUpdated=True}"
                   Style="{StaticResource Header}"
                   Margin="0 10 0 10"
                   Grid.Row="0"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <ComboBox ItemsSource="{Binding TimeScale}"
                      SelectedItem="{Binding SelectedYear}"
                      Grid.Column="0"  />
            <ToggleButton Content="{DynamicResource IDF_Rent}"
                          IsChecked="{Binding RentOutputSelected}"
                          Style="{StaticResource toggleButtonStyle}"
                          Grid.Column="1" />
            <ToggleButton Content="{DynamicResource IDF_Billing}" Style="{StaticResource toggleButtonStyle}" Grid.Column="2"/>
            <ToggleButton Content="{DynamicResource IDF_Other}" Style="{StaticResource toggleButtonStyle}" Grid.Column="3"/>
            <ToggleButton Content="{DynamicResource IDF_Credit}" Style="{StaticResource toggleButtonStyle}" Grid.Column="4"/>
            <ToggleButton Content="{DynamicResource IDF_Tenants}" Style="{StaticResource toggleButtonStyle}" Grid.Column="5"/>

        </Grid>

        <Button Style="{DynamicResource buttonStyle}"
                Command="{Binding CreatePrintOutputCommand}"
                Content="Create New Print Output"
                Grid.Row="2"/>

        <FlowDocumentScrollViewer Grid.Row="3"
                                  Width="840"
                                  Height="594"
                                  IsToolBarVisible="True"
                                  Foreground="Black"
                                  VerticalScrollBarVisibility="Auto"
                                  Document="{Binding ActiveFlowDocument}"
                                  BorderBrush="DimGray"
                                  BorderThickness="2" />
    </Grid>
</UserControl>
