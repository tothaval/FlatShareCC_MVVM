<UserControl x:Class="SharedLivingCostCalculator.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:SharedLivingCostCalculator.Views.Windows" 
        xmlns:comps="clr-namespace:SharedLivingCostCalculator.Components" 
        xmlns:vms="clr-namespace:SharedLivingCostCalculator.ViewModels" 
        xmlns:enum="clr-namespace:SharedLivingCostCalculator.Enums" 
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:toolkit="http://propertytools.org/wpf"
        mc:Ignorable="d"
        Background="{DynamicResource SCB_Background}">
    <UserControl.Resources>
        <Style TargetType="StackPanel">
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="Margin" Value="0 5"/>
        </Style>

        <ObjectDataProvider x:Key="enumValues"
   MethodName="GetValues" ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="enum:SupportedLanguages"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>

    <UniformGrid Margin="20" Columns="2" Rows="6">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{DynamicResource IDF_Language}"
                           MinWidth="100"
                           Style="{StaticResource StringValueTextBlock}"
                           Grid.Column="0"/>
                <ComboBox ItemsSource="{Binding Source={StaticResource enumValues}}"
                          SelectedItem="{Binding SelectedItem}"
                          HorizontalAlignment="Stretch"
                          MinWidth="100"
                           Grid.Column="1"/>
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{DynamicResource IDF_Country}"
                           Style="{StaticResource StringValueTextBlock}"
                           MinWidth="100"
                           Grid.Column="0"/>
            </Grid>

            <!--<StackPanel Grid.Row="0">
            <TextBlock Text="Currency"/>
            <ComboBox ItemsSource="{Binding Currency}" Width="200" Padding="5" Margin="5" />
        </StackPanel>-->

            <comps:DoubleInputView Label="{DynamicResource IDF_FontSize}"
                                   Value="{Binding FontSize,
                UpdateSourceTrigger=PropertyChanged, Delay=350,
                Mode=TwoWay}"
                                   LabelMinWidth="100"
                                   ValueMinWidth="100"
                                   Margin="0 5"/>

            <comps:ObjectInputView Label="{DynamicResource IDF_FontFamily}"
                                   Value="{Binding FontFamily,
                UpdateSourceTrigger=PropertyChanged, Delay=350,
                Mode=TwoWay}"
                                   LabelMinWidth="100"
                                   ValueMinWidth="100"
                                   Margin="0 5"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{DynamicResource IDF_Foreground}"
                           Style="{StaticResource StringValueTextBlock}"
                           MinWidth="100"
                           Grid.Column="0"/>
                <toolkit:ColorPicker HorizontalAlignment="Stretch"
                                     SelectedColor="{Binding ForegroundColor}"
                                     MinWidth="100"
                            FontFamily="{DynamicResource FF}"
                            FontSize="{DynamicResource FS}"
                            Foreground="{DynamicResource SCB_Text}"
                            Background="{DynamicResource SCB_Background}"
                           Grid.Column="1"/>
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{DynamicResource IDF_Background}"
                           Style="{StaticResource StringValueTextBlock}"
                           MinWidth="100"
                           Grid.Column="0"/>
                <toolkit:ColorPicker HorizontalAlignment="Stretch"
                             SelectedColor="{Binding BackgroundColor}"
                           MinWidth="100"
                            FontFamily="{DynamicResource FF}"
                            FontSize="{DynamicResource FS}"
                            Foreground="{DynamicResource SCB_Text}"
                            Background="{DynamicResource SCB_Background}"
                           Grid.Column="1"/>
            </Grid>
        </UniformGrid>
</UserControl>
