                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="{DynamicResource IDF_Price}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding TotalCostsAnnualCostsShare,
                                      StringFormat=C2,
                                      NotifyOnSourceUpdated=True}"
                                             Style="{StaticResource DoubleValueTextBlock}"
                                                           FontWeight="Bold"/>

                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="{DynamicResource IDF_Payments}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Advances,
                                      StringFormat=C2,
                                      NotifyOnSourceUpdated=True}"
                                             Style="{StaticResource DoubleValueTextBlock}"/>

                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="{DynamicResource IDF_Balance}">
