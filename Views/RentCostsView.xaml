                    DockPanel.Dock="Top" 
                    Margin="0 5 0 0">

            <StackPanel>
                <!-- Flat Costs per Month -->
                <StackPanel>

                    <TextBlock Text="{DynamicResource IDF_perMonth}"/>

                    <ListView ItemsSource="{Binding RentListView}"
                              Visibility="{Binding HasOtherCosts, Converter={StaticResource visCon}}">
                        <ListView.View>

                            <GridView ColumnHeaderContainerStyle="{StaticResource GVCH}">

                                <GridView.Columns>

                                    <GridViewColumn Header="{DynamicResource IDF_Rent}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding TotalRentCosts,
                                        StringFormat=C2, ConverterCulture=de-DE,
                                        NotifyOnSourceUpdated=True}"
                                               Style="{StaticResource DoubleValueTextBlock}"/>

                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="{DynamicResource IDF_Advance}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding TotalExtraCosts,
                                        StringFormat=C2, ConverterCulture=de-DE,
                                        NotifyOnSourceUpdated=True}"
                                               Style="{StaticResource DoubleValueTextBlock}"/>

                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="{DynamicResource IDF_Price}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding TotalCosts,
                                            StringFormat=C2, ConverterCulture=de-DE,
                                            NotifyOnSourceUpdated=True}"
                                                   Style="{StaticResource DoubleValueTextBlock}"/>

                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="{DynamicResource IDF_OtherCosts}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding TotalOtherCosts,
                                            StringFormat=C2, ConverterCulture=de-DE,
                                            NotifyOnSourceUpdated=True}"
                                                   Style="{StaticResource DoubleValueTextBlock}"/>

                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="{DynamicResource IDF_CompleteCosts}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding CompleteCosts,
                                        StringFormat=C2, ConverterCulture=de-DE,
                                        NotifyOnSourceUpdated=True}"
                                               Style="{StaticResource DoubleValueTextBlock}"/>

                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>


                                </GridView.Columns>

                            </GridView>

                        </ListView.View>

                    </ListView>

                    <!-- in case RentViewModel has no other costs -->
                    <ListView ItemsSource="{Binding RentListView}"
                              Visibility="{Binding HasOtherCosts, Converter={StaticResource InvisCon}}">
                        <ListView.View>

                            <GridView ColumnHeaderContainerStyle="{StaticResource GVCH}">

                                <GridView.Columns>

                                    <GridViewColumn Header="{DynamicResource IDF_Rent}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding TotalRentCosts,
