                    Margin="0 5 0 0">

            <StackPanel>
                <!-- Room Costs per Month -->
                <StackPanel>

                    <TextBlock Text="{DynamicResource IDF_perMonth}"/>

                    <ListView ItemsSource="{Binding RoomCosts}"
