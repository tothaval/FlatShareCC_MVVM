                                                <TextBlock Text="{Binding AnnualCombinedCosts,
                                                    StringFormat=C2, ConverterCulture=de-DE,
                                                    NotifyOnSourceUpdated=True}"
                                                           Style="{StaticResource DoubleValueTextBlock}"/>

                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                </GridView.Columns>

