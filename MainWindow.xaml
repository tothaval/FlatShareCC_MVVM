<Window x:Class="WGMietkosten.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WGMietkosten"
        xmlns:views="clr-namespace:WGMietkosten.Views"
        xmlns:vms="clr-namespace:WGMietkosten.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="960">
    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type vms:FlatManagementViewModel}">
                <views:FlatManagementView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vms:FlatSetupViewModel}">
                <views:FlatSetupView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vms:RoomSetupViewModel}">
                <views:RoomSetupView/>
            </DataTemplate>
        </Grid.Resources>

        <ContentControl Content="{Binding CurrentViewModel}"/>

    </Grid>
</Window>
