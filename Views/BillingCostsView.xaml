                                                <TextBlock Text="{Binding HeatingUnitsTotalConsumptionSharePercentage,
                                            StringFormat=N2,
                                            NotifyOnSourceUpdated=True}"
                                                   Style="{StaticResource DoubleValueTextBlock}"/>

                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                </GridView.Columns>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Border>

                <!-- room cost shares, rent and payments included-->
                <Border Visibility="{Binding ShowRoomCostShares, Converter={StaticResource visCon}}">
                    <ListView ItemsSource="{Binding BillingViewModel.RoomCostShares}" Grid.Row="1"
                              Visibility="{Binding BillingViewModel.HasPayments, Converter={StaticResource visCon}}"
                              ItemContainerStyle="{StaticResource ItemContainerStyle}"
                              HorizontalAlignment="Stretch"
                              Margin="0 10 0 0"
                          >
                        <ListView.View>

                            <GridView ColumnHeaderContainerStyle="{StaticResource GVCH}">

                                <GridView.Columns>

                                    <GridViewColumn Header="{DynamicResource IDF_RoomName}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding RoomName,
                                            NotifyOnSourceUpdated=True}"
                                                   Style="{StaticResource StringValueTextBlock}"/>

                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="{DynamicResource IDF_Rent}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding RentCostsAnnualShare,
                                      StringFormat=C2,
                                      NotifyOnSourceUpdated=True}"
                                             Style="{StaticResource DoubleValueTextBlock}"/>

                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="{DynamicResource IDF_FixedCosts}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding FixedCostsAnnualCostsShare,
                                      StringFormat=C2,
                                      NotifyOnSourceUpdated=True}"
