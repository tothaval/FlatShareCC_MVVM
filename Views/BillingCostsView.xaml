                           FontSize="{StaticResource FS}"
                           TextAlignment="Center"
                           Grid.Column="14"
                           Grid.Row="0"/>

                    <TextBlock Text="{DynamicResource IDF_Balance}"
                           Style="{StaticResource Header}"
                           FontSize="{StaticResource FS}"
                           TextAlignment="Center"
                           Grid.Column="16"
                           Grid.Row="0"/>
                    <!--#endregion-->


                    <!--#region tablesque display items -->

                    <Rectangle Fill="{StaticResource SCB_Text_Header}"
                           Width="2"
                           Grid.Column="3"
                           Grid.Row="0"
                           Grid.RowSpan="2"/>

                    <Rectangle Fill="{StaticResource SCB_Text_Header}"
                           Width="2"
                           Grid.Column="5"
                           Grid.Row="0"
                           Grid.RowSpan="2"/>

                    <Rectangle Fill="{StaticResource SCB_Text_Header}"
                           Width="2"
                           Grid.Column="7"
                           Grid.Row="0"
                           Grid.RowSpan="2"/>

                    <Rectangle Fill="{StaticResource SCB_Text_Header}"
                           Width="2"
                           Grid.Column="9"
                           Grid.Row="0"
                           Grid.RowSpan="2"/>

                    <Rectangle Fill="{StaticResource SCB_Text_Header}"
                           Width="2"
                           Grid.Column="11"
                           Grid.Row="0"
                           Grid.RowSpan="2"/>
                    <Rectangle Fill="{StaticResource SCB_Text_Header}"
                           Width="2"
                           Grid.Column="13"
                           Grid.Row="0"
                           Grid.RowSpan="2"/>
                    <Rectangle Fill="{StaticResource SCB_Text_Header}"
                           Width="2"
                           Grid.Column="15"
                           Grid.Row="0"
                           Grid.RowSpan="2"/>
                    <!--#endregion-->


                    <!--#region annual costs including payments -->
                    <TextBlock Text="{Binding BillingViewModel.FlatViewModel.Area,
                                        StringFormat=N2, 
                                        NotifyOnSourceUpdated=True}"
                                   Style="{StaticResource DoubleValueTextBlock}"
                                   Grid.Column="2"
                                   Grid.Row="1"/>

                    <TextBlock Text="{Binding BillingViewModel.TotalRentCosts,
                                        StringFormat=C2, 
                                        NotifyOnSourceUpdated=True}"
                                   Style="{StaticResource DoubleValueTextBlock}"
                                   Grid.Column="4"
                                   Grid.Row="1"/>
                    <TextBlock Text="{Binding BillingViewModel.TotalFixedCostsPerPeriod,
                                        StringFormat=C2, 
                                        NotifyOnSourceUpdated=True}"
                                   Style="{StaticResource DoubleValueTextBlock}"
                                   Grid.Column="6"
                                   Grid.Row="1"/>
                    <TextBlock Text="{Binding BillingViewModel.TotalHeatingCostsPerPeriod,
                                        StringFormat=C2, 
                                        NotifyOnSourceUpdated=True}"
                                   Style="{StaticResource DoubleValueTextBlock}"
                                   Grid.Column="8"
                                   Grid.Row="1"/>

                    <TextBlock Text="{Binding BillingViewModel.OtherFTISum,
                                        StringFormat=C2, 
                                        NotifyOnSourceUpdated=True}"
                                   Style="{StaticResource DoubleValueTextBlock}"
                                   Grid.Column="10"
                                   Grid.Row="1"/>
                    
                    <TextBlock Text="{Binding BillingViewModel.TotalCosts,
                                        StringFormat=C2, 
                                        NotifyOnSourceUpdated=True}"
                                   Style="{StaticResource DoubleValueTextBlock}"
                                   FontWeight="Bold"
                                   Grid.Column="12"
                                   Grid.Row="1"/>

                    <TextBlock Text="{Binding BillingViewModel.TotalPayments,
                                        StringFormat=C2, 
                                        NotifyOnSourceUpdated=True}"
                                   Style="{StaticResource DoubleValueTextBlock}"
                                   FontWeight="Bold"
                                   Grid.Column="14"
                                   Grid.Row="1"/>
                    <TextBlock Text="{Binding BillingViewModel.Balance,
                                        StringFormat=C2, 
                                        NotifyOnSourceUpdated=True}"
                                   Style="{StaticResource DoubleValueTextBlock}"
                                   FontWeight="Bold"
                                   Grid.Column="16"
                                   Grid.Row="1"/>
                    <!--#endregion-->

                </Grid>

                <!--#endregion-->

            </Grid>

        </Border>
        <!--#endregion-->


        <!-- annual Room Costs display, depending on BillingViewModel configuration-->
        <!--#region Room Costs -->
        <ToggleButton Content="{DynamicResource IDF_RoomCosts}"
                              IsChecked="{Binding ShowRoomCosts}"
                              Style="{StaticResource toggleButtonStyle}"
                              Grid.Column="1" Margin="0 10 0 0"/>

        <Border Style="{StaticResource VisibilityFieldBorder}"
                    Visibility="{Binding ShowRoomCosts, Converter={StaticResource visCon}}"
                    DockPanel.Dock="Top" 
                    Margin="0 0 0 0">

            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <ToggleButton Content="{DynamicResource IDF_RoomData}"
                                  Style="{StaticResource toggleButtonStyle}"
                                  IsChecked="{Binding ShowRoomData}"/>
              
                    <ToggleButton Content="{DynamicResource IDF_RoomCostShares}"
                                  Style="{StaticResource toggleButtonStyle}"
                                  IsChecked="{Binding ShowRoomCostShares}"/>


                    <ToggleButton Content="{DynamicResource IDF_OtherCostsData}"
                                  IsChecked="{Binding ShowOtherCostsData}"
                                  Style="{StaticResource toggleButtonStyle}"
                                  Visibility="{Binding BillingViewModel.HasOtherCosts,
                        Converter={StaticResource visCon},
                        NotifyOnSourceUpdated=True}"/>

                    <ToggleButton Content="{DynamicResource IDF_OtherCosts}"
                                  IsChecked="{Binding ShowOtherCosts}"
                                  Style="{StaticResource toggleButtonStyle}"
                                  Visibility="{Binding BillingViewModel.HasOtherCosts,
                        Converter={StaticResource visCon},
                        NotifyOnSourceUpdated=True}"/>
                </StackPanel>



                <!--#region RoomCosts, rent and payments included -->

                <!-- room data and consumption values, rent and payments included-->
                <Border Visibility="{Binding ShowRoomData, Converter={StaticResource visCon}}">
                    <ListView ItemsSource="{Binding BillingViewModel.RoomCostShares}"
                              Visibility="{Binding BillingViewModel.HasPayments, Converter={StaticResource visCon}}"
                              ItemContainerStyle="{StaticResource ItemContainerStyle}"
                              HorizontalAlignment="Stretch"
                              Margin="0 10 0 0"
                          >
                        <ListView.View>

                            <GridView ColumnHeaderContainerStyle="{StaticResource GVCH}">

                                <GridView.Columns>

                                    <GridViewColumn Header="{DynamicResource IDF_RoomName}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding RoomName,
                                            NotifyOnSourceUpdated=True}"
                                                   Style="{StaticResource StringValueTextBlock}"/>

                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="{DynamicResource IDF_RoomArea}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding RoomArea,
                                            StringFormat=N2,
                                            NotifyOnSourceUpdated=True}"
                                                   Style="{StaticResource DoubleValueTextBlock}"/>

                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="{DynamicResource IDF_SharedFlatArea}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding SharedAreaShare,
                                                   StringFormat=N2,
                                                   NotifyOnSourceUpdated=True}"
                                                          Style="{StaticResource DoubleValueTextBlock}"/>

                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="{DynamicResource IDF_RentedAreaShare}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding RentedAreaShare,
                                                   StringFormat=N2,
                                                   NotifyOnSourceUpdated=True}"
                                                          Style="{StaticResource DoubleValueTextBlock}"/>

                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="{DynamicResource IDF_RoomHeatingUnits}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding HeatingUnitsAnnualConsumptionShare,
                                            StringFormat=N4,
                                            NotifyOnSourceUpdated=True}"
                                                   Style="{StaticResource DoubleValueTextBlock}"/>

                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>


                                    <GridViewColumn Header="{DynamicResource IDF_ConsumptionShare}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding HeatingUnitsSharedConsumptionShare,
                                            StringFormat=N4,
                                            NotifyOnSourceUpdated=True}"
                                                   Style="{StaticResource DoubleValueTextBlock}"/>

                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="{DynamicResource IDF_CombinedConsumption}">
