                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                </GridView.Columns>

                            </GridView>

                        </ListView.View>

                    </ListView>
                    
                </StackPanel>

                <!-- Flat Costs per Year -->
