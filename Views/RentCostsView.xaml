                                                <TextBlock Text="{Binding AnnualFixedShare,
                                                    StringFormat=C2, ConverterCulture=de-DE,
                                                    NotifyOnSourceUpdated=True}"
                                                           Style="{StaticResource DoubleValueTextBlock}"/>

                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>

                                    <GridViewColumn Header="{DynamicResource IDF_AnnualHeating}">
