<UserControl x:Class="SharedLivingCostCalculator.Views.RentUpdateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SharedLivingCostCalculator.Views"
             xmlns:utils="clr-namespace:SharedLivingCostCalculator.Utility"
             xmlns:viewmodels="clr-namespace:SharedLivingCostCalculator.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:RentUpdateViewModel}"
             x:Name="rentUpdateView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <utils:InverseVisibilityConverter x:Key="InverseVisibilityConverter"/>
        <utils:VisibilityConverter x:Key="VisibilityConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="0" HorizontalAlignment="Left">
            <TextBlock Text="{DynamicResource IDF_RentUpdateData}" Margin="5 10"
                       TextAlignment="Center" FontSize="14"/>

            <StackPanel Margin="5 5" Orientation="Horizontal">
                <TextBlock Text="{DynamicResource IDF_StartDate}" Width="150" VerticalAlignment="Bottom" />
                <DatePicker SelectedDate="{Binding StartDate,StringFormat=d, ConverterCulture=de-DE,
                        UpdateSourceTrigger=PropertyChanged}"
                                 Width="100"/>
            </StackPanel>

            <StackPanel Margin="5 5" Orientation="Horizontal">
                <TextBlock Text="{DynamicResource IDF_Rent}" Width="150" VerticalAlignment="Center" />
                <TextBox Text="{Binding ColdRent,
                        UpdateSourceTrigger=PropertyChanged,
                        ValidatesOnDataErrors=True,
                        StringFormat=C2, ConverterCulture=de-DE, Delay=500}"/>
            </StackPanel>

            <StackPanel Margin="5 5" Orientation="Horizontal">
                <TextBlock Text="{DynamicResource IDF_AdvanceFixed}" Width="150" VerticalAlignment="Center" />
                <TextBox Text="{Binding ExtraCostsShared,
                        UpdateSourceTrigger=PropertyChanged,
                        ValidatesOnDataErrors=True,
                        StringFormat=C2, ConverterCulture=de-DE, Delay=500}"/>
            </StackPanel>

            <StackPanel Margin="5 5" Orientation="Horizontal">
                <TextBlock Text="{DynamicResource IDF_AdvanceHeating}" Width="150" VerticalAlignment="Center" />
                <TextBox Text="{Binding ExtraCostsHeating,
                        UpdateSourceTrigger=PropertyChanged,
                        ValidatesOnDataErrors=True,
                        StringFormat=C2, ConverterCulture=de-DE, Delay=500}"/>
            </StackPanel>

            <StackPanel Margin="5 5" Orientation="Horizontal" Background="LightGray">
                <TextBlock Text="{DynamicResource IDF_AdvanceTotal}" Width="150" VerticalAlignment="Center" />
                <TextBox IsReadOnly="True" Text="{Binding ExtraCostsTotal,
                        Mode=OneWay,  StringFormat=C2, ConverterCulture=de-DE}"
                             Background="LightGray"/>
            </StackPanel>

            <StackPanel Margin="5 5" Orientation="Horizontal" Background="LightGray">
                <TextBlock Text="{DynamicResource IDF_PriceTotal}" Width="150" VerticalAlignment="Center" />
                <TextBox IsReadOnly="True" Text="{Binding CostsTotal,
                        Mode=OneWay,  StringFormat=C2, ConverterCulture=de-DE}"
                             Background="LightGray"/>
            </StackPanel>

        </StackPanel>

        <StackPanel Grid.Column="1" Orientation="Vertical" Margin="20">
            <CheckBox Content="{DynamicResource IDF_BaseRentOnBilling}" IsChecked="{Binding HasBilling}" />

            <Grid Margin="0 10" Visibility="{Binding SetBillingVisibility,  Converter={StaticResource VisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Content="{DynamicResource IDF_NewBilling}" Command="{Binding NewBillingCommand}"
                        HorizontalAlignment="Left"
                        HorizontalContentAlignment="Left"
                        Padding="2"
                        Grid.Column="0"/>
                <ComboBox SelectedItem="{Binding SelectedItem}" ItemsSource="{Binding BillingViewModels}"
                          DisplayMemberPath="Signature"
                          Grid.Column="1"/>

            </Grid>
            
        </StackPanel>
        
    </Grid>

</UserControl>
