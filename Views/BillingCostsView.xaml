<UserControl x:Class="SharedLivingCostCalculator.Views.BillingCostsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SharedLivingCostCalculator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Rent ID"/>
            <TextBlock Grid.Row="0" Grid.Column="1" Text="Total Rent Costs"/>
            <TextBlock Grid.Row="0" Grid.Column="2" Text="Total Extra Costs"/>
            <TextBlock Grid.Row="0" Grid.Column="3" Text="Total Costs"/>
            <TextBlock Grid.Row="0" Grid.Column="4" Text="Total Payments" />
            <TextBlock Grid.Row="0" Grid.Column="5" Text="Balance" />

            <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding ID}"/>
            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding TotalRentCosts, NotifyOnSourceUpdated=True, StringFormat=C2, ConverterCulture=de-DE}"/>            
            <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding TotalExtraCosts, NotifyOnSourceUpdated=True, StringFormat=C2, ConverterCulture=de-DE}"/>
            <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding TotalCosts, NotifyOnSourceUpdated=True, StringFormat=C2, ConverterCulture=de-DE}"/>
            <TextBlock Grid.Row="1" Grid.Column="4" Text="{Binding TotalPayments, NotifyOnSourceUpdated=True, StringFormat=C2, ConverterCulture=de-DE}"/>
            <TextBlock Grid.Row="1" Grid.Column="5" Text="{Binding Balance, NotifyOnSourceUpdated=True, StringFormat=C2, ConverterCulture=de-DE}" />
            
        </Grid>

        <ListView ItemsSource="{Binding RoomCosts}"
            SelectionMode="Single"
            TextBlock.TextAlignment="Right"       
            Margin="5 5"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            HorizontalContentAlignment="Left"
            BorderThickness="0">

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.View>
                <GridView>

                    <GridViewColumn>
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Content="ID" HorizontalContentAlignment="Left" Width="Auto"/>
                        </GridViewColumn.Header>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock VerticalAlignment="Center" TextAlignment="Right" Padding="2" 
                                  Text="{Binding Room.ID}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>


                    <GridViewColumn>
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Content="Room" HorizontalContentAlignment="Left" Width="Auto"/>
                        </GridViewColumn.Header>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock VerticalAlignment="Center" TextAlignment="Right" Padding="2" 
                                         Text="{Binding Room.RoomName}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn>
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Content="Area" HorizontalContentAlignment="Left" Width="Auto"/>
                        </GridViewColumn.Header>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock VerticalAlignment="Center" TextAlignment="Right" Padding="2" 
                                     HorizontalAlignment="Right" Text="{Binding Room.RoomArea}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn>
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Content="Heating Units" HorizontalContentAlignment="Left" Width="Auto"/>
                        </GridViewColumn.Header>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding HeatingUnitsConsumption,
                                  UpdateSourceTrigger=PropertyChanged,
                                  NotifyOnTargetUpdated=True,
                                  NotifyOnSourceUpdated=True,
                                  ValidatesOnDataErrors=true,
                                  StringFormat=N4, Delay=500}"
                                        Padding="2" VerticalAlignment="Center" 
                                     TextAlignment="Right" HorizontalAlignment="Right"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn>
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Content="%" HorizontalContentAlignment="Left" Width="Auto"/>
                        </GridViewColumn.Header>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Percentage, Mode=OneWay,
                              UpdateSourceTrigger=PropertyChanged,
                              NotifyOnSourceUpdated=True,StringFormat=N2}"
                                           Background="LightGray"
                                        Padding="2" VerticalAlignment="Center" 
                                     TextAlignment="Left"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn>
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Content="Rent" HorizontalContentAlignment="Left" Width="Auto"/>
                        </GridViewColumn.Header>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock VerticalAlignment="Center" TextAlignment="Right" Padding="2" 
                                  Text="{Binding RentShare, StringFormat=C2, ConverterCulture=de-DE}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn>
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Content="Fixed Costs" HorizontalContentAlignment="Left" Width="Auto"/>
                        </GridViewColumn.Header>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock VerticalAlignment="Center" TextAlignment="Right" Padding="2" 
                                  Text="{Binding FixedShare, StringFormat=C2, ConverterCulture=de-DE}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn>
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Content="Heating Costs" HorizontalContentAlignment="Left" Width="Auto"/>
                        </GridViewColumn.Header>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock VerticalAlignment="Center" TextAlignment="Right" Padding="2" 
                                  Text="{Binding HeatingShare, StringFormat=C2, ConverterCulture=de-DE}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn>
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Content="Total Costs" HorizontalContentAlignment="Left" Width="Auto"/>
                        </GridViewColumn.Header>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock VerticalAlignment="Center" TextAlignment="Right" Padding="2" 
                                  Text="{Binding TotalCosts, StringFormat=C2, ConverterCulture=de-DE}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn>
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Content="Payments" HorizontalContentAlignment="Left" Width="Auto"/>
                        </GridViewColumn.Header>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock VerticalAlignment="Center" TextAlignment="Right" Padding="2" 
                                  Text="{Binding TotalPayments, StringFormat=C2, ConverterCulture=de-DE}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn>
                        <GridViewColumn.Header>
                            <GridViewColumnHeader Content="Balance" HorizontalContentAlignment="Left" Width="Auto"/>
                        </GridViewColumn.Header>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock VerticalAlignment="Center" TextAlignment="Right" Padding="2" 
                                  Text="{Binding Balance, StringFormat=C2, ConverterCulture=de-DE}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>


    </StackPanel>
</UserControl>
